<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.smart_16.project5_2.MainActivity">




    <ProgressBar
        android:id="@+id/progStatus"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:max="120"
        android:progress="60" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDecrease1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="감소" />

        <Button
            android:id="@+id/btnIncrease1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="증가" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDecrease2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="감소" />

            <Button
                android:id="@+id/btnIncrease2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="증가" />

            <Button
                android:id="@+id/btnResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결과" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <SeekBar
            android:id="@+id/seekRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255" />

        <View
            android:id="@+id/viewColor1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:id="@+id/viewColor2"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:id="@+id/viewColor3"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>



</LinearLayout>
