<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/do_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도"
        android:background="#FF00FF"
        android:layout_margin="5dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="레"
        android:background="#FF0000"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/mi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="미"
        android:background="#FFACB7"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="파"
        android:background="#ffa050"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/sol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="솔"
        android:background="#FFFF00"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/ra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="라"
        android:background="#00FF00"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/si"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시"
        android:background="#00FFFF"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/do_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도"
        android:background="#0000FF"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Chord_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="으뜸화음" />

        <Button
            android:id="@+id/Chord_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="버금달림화음" />

        <Button
            android:id="@+id/Chord_V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="딸림화음" />
    </LinearLayout>

</LinearLayout>